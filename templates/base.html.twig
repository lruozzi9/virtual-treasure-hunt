<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {{ encore_entry_link_tags('tailwind') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <div class="p-4">
            <div class="text-5xl font-normal">
                {{ 'app.ui.title'|trans }}
            </div>
            {% block content %}{% endblock %}

            <div class="box-border mt-56 lg:w-2/3 p-4 border-4">
                <h3 class="text-xl font-bold">{{ 'app.ui.instructions_label'|trans }}</h3>
                <hr />
                <div class="my-2.5 font-normal text-base">
                    {{ 'app.ui.instructions'|trans|raw }}
                </div>
            </div>
        </div>
    </body>
</html>
